<!DOCTYPE html>
<html>
   <head>
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>
         <%= posts.title %>
      </title>
      <!-- cdn for icons -->
      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt"
         crossorigin="anonymous">
      <!-- linking css stylesheet -->
      <link rel='stylesheet' href='/stylesheets/style.css'/>
      <!-- bootstrap cdn -->
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
         crossorigin="anonymous">
      <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script> 
      <script src="http://netdna.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.js"></script> 
      <!-- link for google fonts -->
      <link href="https://fonts.googleapis.com/css?family=Righteous" rel="stylesheet">
      <!-- summernote -->
      <link href="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.9/summernote.css" rel="stylesheet">
      <script src="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.9/summernote.js"></script>
   </head>
   <body>
      <h1 sty><% posts.title %></h1>
      <header>
         <div class="headerimg">
            <div class="navbar">
               <a href="/">Home</a>
               <a href="/archive">Archive</a>
               <a href="/post">Post</a>
               <a href="/contact">Contact</a>
               <a data-toggle="dropdown" class="btn btn-info dropdown-toggle get-started-btn mt-1 mb-1" href="/loginin">Login</a>
               <a href="/signin" data-toggle="dropdown" class="btn btn-info dropdown-toggle get-started-btn mt-1 mb-1">Sign Up</a>
            </div>
            <div class="heading">
               <h1>Budget Travellers</h1>
               <h3>Edit Post</h3>
            </div>
         </div>
      </header>
      <div class="container">
         <div class="jumbotron">
            <h1 class="jumbotronHeader">Budget Travellers</h1>
            <p class="jumbotronHeader">Edit Post</p>
         </div>
         <h2 class="text-center">Edit Post</h2>
         <form action="/edit/<%= posts.id %>" method="POST">
            <div class="input-group">
               <label for="title">Title</label>
               <input type="text" class="form-control" name="title" id="title" placeholder="title" value="<%= posts.title %>">
            </div>
            <div class="input-group">
               <label for="datetime">Date/Time</label>
               <input type="datetime" class="form-control" name="datetime" id="datetime" placeholder="datetime"  value="<%=posts.datetime%>">
            </div>
            <div class="input-group">
               <label for="author">Author</label>
               <input type="author" class="form-control" name="datetime" id="datetime" placeholder="datetime"  value="<%=posts.author%>">
            </div>
            <div class="input-group">
               <label for="title">Content</label>
            </div>
            <div class="input-group">
               <textarea name="content" id="summernote"><%= posts.content %></textarea>
               <script>
                  $(document).ready(function () {
                      $('#summernote').summernote(
                          {
                              height: 150
                              
                          }
                          
                      );
                  });
               </script>
            </div>
            <div class="form-group">
               <button class="btn btn-primary" type="post">Post</button>
            </div>
            <footer>
               <h3>Created & Designed by Claire Jacobs</h3>
            </footer>
         </form>
      </div>
</body>